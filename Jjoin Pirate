--[[ CONFIGURAÇÕES GLOBAIS ]]
_G.JoinPirates = true 

_G.Settings = {
    JoinTeam = "Pirates", -- Define o time padrão
    Translator = true
}

-- Função para trocar de time automaticamente
local function SetTeam()
    local team = _G.Settings.JoinTeam
    local args = {
        [1] = "SetTeam",
        [2] = team
    }
    
    -- Invoca o servidor para mudar o time
    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer(unpack(args))
end

-- Executa a função
SetTeam()
